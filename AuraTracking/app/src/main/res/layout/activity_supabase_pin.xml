<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".ui.admin.SupabasePinActivity">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="@string/supabase_pin_title"
        app:titleTextColor="@color/white"
        app:navigationIcon="@android:drawable/ic_menu_revert"
        app:navigationIconTint="@color/white" />

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/supabase_pin_title"
            android:src="@android:drawable/ic_lock_lock"
            app:tint="@color/primary" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/supabase_pin_title"
            android:textColor="@color/primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="@string/supabase_pin_subtitle"
            android:textColor="@color/text_secondary"
            android:textSize="16sp" />

        <!-- PIN Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPin"
            style="@style/Theme.AuraTracking.TextInputLayout"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/supabase_pin_hint">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:inputType="numberPassword"
                android:maxLength="4"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Error Message -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:textColor="@color/error"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- Confirm Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConfirm"
            style="@style/Theme.AuraTracking.Button"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:text="@string/supabase_pin_confirm" />

        <!-- Back Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBack"
            style="@style/Theme.AuraTracking.Button.Outlined"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:text="@string/admin_cancel" />

    </LinearLayout>

</LinearLayout>

