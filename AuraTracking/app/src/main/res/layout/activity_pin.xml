<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_industrial"
    tools:context=".ui.pin.PinActivity">

    <!-- Back Button (Top Left) -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        android:src="@drawable/ic_back"
        app:tint="@color/text_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Main Card Container -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMain"
        style="@style/AuraTracking.Card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <LinearLayout
            android:id="@+id/pinContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Lock Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cardBackgroundColor="@color/primary_light"
                app:cardCornerRadius="36dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="18dp"
                    android:src="@drawable/ic_lock"
                    android:contentDescription="@string/pin_title"
                    app:tint="@color/white" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/pin_title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <!-- Operator Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/primary_variant"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_operator"
                        app:tint="@color/white" />

                    <TextView
                        android:id="@+id/tvOperator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        tools:text="JoÃ£o Silva - 1234" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Divider -->
            <View
                android:layout_width="40dp"
                android:layout_height="2dp"
                android:layout_marginTop="24dp"
                android:background="@color/secondary" />

            <!-- PIN Input Fields -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPin1"
                    android:layout_width="56dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="12dp"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:background="@drawable/pin_field_background"
                    android:textColor="@color/primary"
                    android:hint=""
                    android:padding="12dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPin2"
                    android:layout_width="56dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="12dp"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:background="@drawable/pin_field_background"
                    android:textColor="@color/primary"
                    android:hint=""
                    android:padding="12dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPin3"
                    android:layout_width="56dp"
                    android:layout_height="64dp"
                    android:layout_marginEnd="12dp"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:background="@drawable/pin_field_background"
                    android:textColor="@color/primary"
                    android:hint=""
                    android:padding="12dp" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPin4"
                    android:layout_width="56dp"
                    android:layout_height="64dp"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:background="@drawable/pin_field_background"
                    android:textColor="@color/primary"
                    android:hint=""
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Error Message -->
            <TextView
                android:id="@+id/tvError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textColor="@color/error"
                android:textSize="14sp"
                android:textAlignment="center"
                android:visibility="gone"
                tools:text="PIN incorreto"
                tools:visibility="visible" />

            <!-- Login Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogin"
                style="@style/AuraTracking.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="24dp"
                android:text="@string/pin_login"
                app:icon="@android:drawable/ic_menu_send"
                app:iconGravity="end"
                app:iconTint="@color/white" />

            <!-- Loading Indicator -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                android:indeterminateTint="@color/primary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
