<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.dashboard.DashboardActivity">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/dashboard_title"
            app:titleTextColor="@color/white"
            app:menu="@menu/menu_dashboard"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="88dp">

            <!-- Status Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStatus"
                style="@style/AuraTracking.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/status_stopped_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <!-- Status Indicator -->
                    <View
                        android:id="@+id/viewStatusIndicator"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:background="@drawable/bg_status_stopped" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStatusLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dashboard_status_label"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dashboard_status_stopped"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/status_stopped" />

                    </LinearLayout>

                    <!-- Config Button -->
                    <ImageButton
                        android:id="@+id/btnConfig"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_settings"
                        app:tint="@color/text_secondary"
                        android:contentDescription="@string/settings" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Operator Card -->
            <com.google.android.material.card.MaterialCardView
                style="@style/AuraTracking.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Operator Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardBackgroundColor="@color/primary_light"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="10dp"
                                android:src="@drawable/ic_operator"
                                app:tint="@color/white" />

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvOperatorName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                tools:text="João da Silva" />

                            <TextView
                                android:id="@+id/tvOperatorMatricula"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                tools:text="Matrícula: 12345" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/divider_light" />

                    <!-- Equipment Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- Equipment Type -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLabelEquipmentType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tipo"
                                android:textSize="12sp"
                                android:textColor="@color/text_hint"
                                android:textAllCaps="true" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_truck"
                                    app:tint="@color/primary" />

                                <TextView
                                    android:id="@+id/tvEquipmentType"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="6dp"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/text_primary"
                                    tools:text="Truck" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Equipment Name -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLabelEquipmentName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Equipamento"
                                android:textSize="12sp"
                                android:textColor="@color/text_hint"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/tvEquipmentName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/primary"
                                tools:text="TRK-101" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Telemetry Card (visible when tracking) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTelemetry"
                style="@style/AuraTracking.Card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Telemetry Title -->
                    <TextView
                        android:id="@+id/tvTitleTelemetry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Telemetria"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <!-- GPS Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/viewGpsIndicator"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/bg_status_stopped" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_gps_signal"
                            app:tint="@color/primary" />

                        <TextView
                            android:id="@+id/tvLabelGps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="GPS"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- GPS Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="28dp"
                        android:columnCount="2"
                        android:rowCount="3">

                        <!-- Lat -->
                        <TextView
                            android:id="@+id/tvLabelLat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lat: "
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvGpsLat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:textSize="13sp"
                            android:textColor="@color/text_primary"
                            tools:text="-23.550520" />

                        <!-- Lon -->
                        <TextView
                            android:id="@+id/tvLabelLon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lon: "
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvGpsLon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:textSize="13sp"
                            android:textColor="@color/text_primary"
                            tools:text="-46.633308" />

                        <!-- Speed & Accuracy -->
                        <TextView
                            android:id="@+id/tvLabelSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vel: "
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvGpsSpeed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary"
                            tools:text="45.2 km/h" />

                    </GridLayout>

                    <!-- Accuracy Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvLabelAcc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Precisão: "
                            android:textSize="13sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvGpsAccuracy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="@color/text_primary"
                            tools:text="±5.2m" />

                        <TextView
                            android:id="@+id/tvGpsTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textSize="12sp"
                            android:textColor="@color/text_hint"
                            tools:text="14:30:25" />

                    </LinearLayout>

                    <!-- IMU Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <View
                            android:id="@+id/viewImuIndicator"
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:background="@drawable/bg_status_stopped" />

                        <TextView
                            android:id="@+id/tvLabelImu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="IMU"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <!-- IMU Data -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginStart="28dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvLabelImuAccel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Acel: "
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvImuAccel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                tools:text="X:0.12 Y:-0.05 Z:9.81" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvLabelImuGyro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Giro: "
                                android:textSize="13sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvImuGyro"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="13sp"
                                android:textColor="@color/text_primary"
                                tools:text="X:0.01 Y:0.02 Z:-0.01" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:id="@+id/dividerConn"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginVertical="12dp"
                        android:background="@color/divider_light" />

                    <!-- Connection Status Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- MQTT Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:id="@+id/viewMqttIndicator"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/bg_status_stopped" />

                            <TextView
                                android:id="@+id/tvLabelMqtt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="MQTT:"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvMqttStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                tools:text="OK" />

                        </LinearLayout>

                        <!-- Queue Status -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <View
                                android:id="@+id/viewQueueIndicator"
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/bg_status_tracking" />

                            <TextView
                                android:id="@+id/tvLabelQueue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="Fila:"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:id="@+id/tvQueueSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                tools:text="0" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Packets Sent -->
                    <TextView
                        android:id="@+id/tvPacketsSent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="12sp"
                        android:textColor="@color/text_hint"
                        tools:text="1234 pacotes enviados" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- FAB for Start/Stop Tracking -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fabTracking"
        style="@style/AuraTracking.FAB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="16dp"
        android:text="@string/dashboard_start_tracking"
        app:icon="@android:drawable/ic_media_play" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
